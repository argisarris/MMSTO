<?xml version="1.0" encoding="UTF-8"?>
<!-- SUMO Route Definitions for A3 Highway Network -->
<!-- Network: A3 Highway toward Zurich with THA, HOR, and WAED entry/exit points -->

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- ========================================= -->
    <!-- VEHICLE TYPE DEFINITIONS                  -->
    <!-- ========================================= -->

    <!-- Include vehicle type definitions from external file -->
    <include href="vTypes.xml"/>

    <!-- ========================================= -->
    <!-- ROUTE DEFINITIONS                         -->
    <!-- ========================================= -->

    <!-- ============================================== -->
    <!-- HIGHWAY THROUGH-TRAFFIC ROUTES (4 routes)      -->
    <!-- ============================================== -->

    <!-- Route 1: Full highway traverse (A3_Start to A3_End) -->
    <route id="route_A3_full" edges="A3_WAED_S A3_WAED_MID A3_WAED_MERG A3_HOR_S A3_HOR_MID A3_HOR_MERG A3_THA_S A3_THA_MID A3_THA_MERG A3_THA_N"/>

    <!-- Route 2: A3_Start to WAED exit -->
    <route id="route_A3_to_WAED" edges="A3_WAED_S A36_WAED"/>

    <!-- Route 3: A3_Start to HOR exit -->
    <route id="route_A3_to_HOR" edges="A3_WAED_S A3_WAED_MID A3_WAED_MERG A3_HOR_S A35_HOR"/>

    <!-- Route 4: A3_Start to THA exit -->
    <route id="route_A3_to_THA" edges="A3_WAED_S A3_WAED_MID A3_WAED_MERG A3_HOR_S A3_HOR_MID A3_HOR_MERG A3_THA_S A34_THA"/>

    <!-- ============================================== -->
    <!-- ENTRY RAMP ROUTES (3 routes)                   -->
    <!-- ============================================== -->

    <!-- Route 5: WAED entry to A3_End -->
    <route id="route_WAED_to_A3" edges="E36_WAED E36_WAED_ACC A3_WAED_MERG A3_HOR_S A3_HOR_MID A3_HOR_MERG A3_THA_S A3_THA_MID A3_THA_MERG A3_THA_N"/>

    <!-- Route 6: HOR entry to A3_End -->
    <route id="route_HOR_to_A3" edges="E35_HOR E35_HOR_ACC A3_HOR_MERG A3_THA_S A3_THA_MID A3_THA_MERG A3_THA_N"/>

    <!-- Route 7: THA entry to A3_End -->
    <route id="route_THA_to_A3" edges="E34_THA E34_THA_ACC A3_THA_MERG A3_THA_N"/>

</routes>
