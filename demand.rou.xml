    <flow id="flow_HOR_to_A3_truck" type="truck" route="route_HOR_to_A3"
          begin="0" end="3600" vehsPerHour="20" departLane="best" departSpeed="max"/>

    <!-- Route 7: THA entry to A3_End -->
    <!-- Cars entering at THA -->
    <flow id="flow_THA_to_A3_car" type="car" route="route_THA_to_A3"
          begin="0" end="3600" vehsPerHour="1000" departLane="best" departSpeed="max"/>

