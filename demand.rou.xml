    <!-- ENTRY RAMP FLOWS                               -->
    <!-- ============================================== -->

    <!-- Route 5: WAED entry to A3_End -->
    <!-- Cars entering at WAED -->
    <flow id="flow_WAED_to_A3_car" type="car" route="route_WAED_to_A3"
