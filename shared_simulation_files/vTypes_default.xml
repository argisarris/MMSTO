<?xml version="1.0" encoding="UTF-8"?>

<!-- SUMO Default Vehicle Types for 2040-None Baseline Scenario -->
<!-- Author: asarris -->
<!-- Purpose: Neutral baseline behavior without custom behavioral parameters -->

<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">

    <!-- Default Car - SUMO Neutral Behavior -->
    <!-- No custom tau, impatience, lc* parameters - pure SUMO defaults -->
    <vType id="default_car"
           vClass="passenger"
           length="5.0"
           minGap="2.5"
           accel="2.6"
           decel="4.5"
           sigma="0.5"
           color="1,1,0"/>

    <!-- Default Truck - SUMO Neutral Behavior -->
    <!-- No custom tau, impatience, lc* parameters - pure SUMO defaults -->
    <vType id="default_truck"
           vClass="truck"
           length="12.0"
           minGap="2.5"
           accel="1.3"
           decel="4.0"
           sigma="0.5"
           color="0,0.5,1"/>

</additional>
